@model Bespoker.Web.Models.PokerSessionModel

@{
    ViewBag.Title = Model.Name;
}

<h2>Poker Session @Model.Name</h2>

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.0.3.min.js"></script>
    <script src="~/signalr/hubs"></script>

    <script>
        $(document).ready(function () {
            var sessionName = '@Model.Name';
            var hub = $.connection.bespokerHub;
            //hub.client.hello = function (theDate) {
            //    alert('date received: ' + theDate);
            //};
            $.connection.hub.start().done(function () {
                hub.server.registerForSession(sessionName);
            });
        });
    </script>
}